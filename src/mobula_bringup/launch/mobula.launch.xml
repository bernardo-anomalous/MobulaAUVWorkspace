<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <!-- Start log bridge immediately -->
  <node pkg="auv_pkg" exec="console_bridge_node" />

  <!-- IMU after 1.5 s -->
  <timer period="1.5">
    <node pkg="auv_pkg" exec="imu_node" />
  </timer>

  <!-- Servo driver after 3.0 s -->
  <timer period="4.0">
    <node pkg="auv_pkg" exec="servo_driver" />
  </timer>

  <!-- Interpolator after 3.5 s -->
  <timer period="3.5">
    <node pkg="auv_pkg" exec="servo_interpolation" />
  </timer>

  <!-- Pitch PID after 4.0 s -->
  <timer period="4.0">
    <node pkg="auv_pkg" exec="pitch_pid" />
  </timer>

  <!-- Roll PID after 4.5 s -->
  <timer period="4.5">
    <node pkg="auv_pkg" exec="roll_pid" />
  </timer>

  <!-- Depth sensor after 5.0 s -->
  <timer period="5.0">
    <node pkg="auv_pkg" exec="depth_sensor" />
  </timer>

  <!-- Acceleration node after 5.5 s -->
  <timer period="6.5">
    <node pkg="auv_pkg" exec="acceleration_node" />
  </timer>

  <!-- Battery node after 6.0 s -->
  <timer period="6.0">
    <node pkg="auv_pkg" exec="battery_node" />
  </timer>

  <!-- System monitor after 6.5 s -->
  <timer period="6.5">
    <node pkg="auv_pkg" exec="system_monitor_node" />
  </timer>
</launch>
