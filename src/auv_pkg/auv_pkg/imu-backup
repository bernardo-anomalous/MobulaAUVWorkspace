#!/usr/bin/env python3

import rclpy
from rclpy.node import Node
import board
import busio
from adafruit_bno08x.i2c import BNO08X_I2C
from adafruit_bno08x import BNO_REPORT_ACCELEROMETER, BNO_REPORT_GYROSCOPE, BNO_REPORT_MAGNETOMETER, BNO_REPORT_ROTATION_VECTOR
from sensor_msgs.msg import Imu
from geometry_msgs.msg import Vector3
from std_msgs.msg import Float32, String
import math
import time

class IMUNode(Node):
    def __init__(self):
        super().__init__('bno080_imu_node_v2')
        
        # Set up I2C connection on default I2C Bus 1
        i2c = busio.I2C(board.SCL, board.SDA)
        self.bno = BNO08X_I2C(i2c, address=0x4B)

        self.get_logger().info("Initializing BNO08X sensor...")

        try:
            self.bno.enable_feature(BNO_REPORT_ACCELEROMETER)
            self.get_logger().info("Accelerometer enabled.")
            self.bno.enable_feature(BNO_REPORT_GYROSCOPE)
            self.get_logger().info("Gyroscope enabled.")
            self.bno.enable_feature(BNO_REPORT_MAGNETOMETER)
            self.get_logger().info("Magnetometer enabled.")
            self.bno.enable_feature(BNO_REPORT_ROTATION_VECTOR)
            self.get_logger().info("Rotation vector enabled.")
            time.asleep(0.2)
        except Exception as e:
            self.get_logger().error(f"Error enabling features: {e}")

        # Publishers for IMU data and individual features
        self.imu_publisher_ = self.create_publisher(Imu, 'imu/data', 10)
        self.rpy_publisher_ = self.create_publisher(Vector3, 'imu_euler', 10)
        self.heading_publisher_ = self.create_publisher(String, 'heading', 10)
        self.accel_publisher_ = self.create_publisher(String, 'imu_accelerometer', 10)
        self.gyro_publisher_ = self.create_publisher(String, 'imu_gyro', 10)
        self.magnetometer_publisher_ = self.create_publisher(String, 'imu_magnetometer', 10)

        self.timer = self.create_timer(0.1, self.publish_imu_data)  # Publish at 10Hz
        time.sleep(0.2)

    def publish_imu_data(self):
        try:
            quat_i, quat_j, quat_k, quat_real = self.bno.quaternion
            accel_x, accel_y, accel_z = self.bno.acceleration
            gyro_x, gyro_y, gyro_z = self.bno.gyro
            mag_x, mag_y, mag_z = self.bno.magnetic
        except KeyError as e:
            self.get_logger().error(f'Unknown sensor report ID: {e}')
            return
        except AttributeError as e:
            self.get_logger().error(f'Sensor data retrieval error: {e}')
            return
        except Exception as e:
            self.get_logger().error(f'Unexpected error: {e}')
            return

        self.get_logger().info(f"Raw Data -> Quaternion: ({quat_i}, {quat_j}, {quat_k}, {quat_real}), "
                               f"Acceleration: ({accel_x}, {accel_y}, {accel_z}), "
                               f"Gyroscope: ({gyro_x}, {gyro_y}, {gyro_z}), "
                               f"Magnetometer: ({mag_x}, {mag_y}, {mag_z})")

        quat = type('', (), {})()  # Create a simple object to hold quaternion data
        quat.x = quat_i
        quat.y = quat_j
        quat.z = quat_k
        quat.w = quat_real
        if quat is not None:
            imu_msg = Imu()

            # Set orientation in quaternion (x, y, z, w)
            imu_msg.orientation.x = quat.x
            imu_msg.orientation.y = quat.y
            imu_msg.orientation.z = quat.z
            imu_msg.orientation.w = quat.w

            # Since the BNO080 has an integrated fusion algorithm, the covariance can be set to 0 for now.
            imu_msg.orientation_covariance[0] = -1  # -1 indicates that covariance is unknown

            # Publish the IMU message
            self.imu_publisher_.publish(imu_msg)
            self.get_logger().info('Published IMU data.')

            # Calculate roll, pitch, and yaw from quaternion
            roll, pitch, yaw = self.quaternion_to_euler(quat.x, quat.y, quat.z, quat.w)

            # Publish roll, pitch, and yaw to the imu_euler topic
            rpy_msg = Vector3()
            rpy_msg.x = roll
            rpy_msg.y = pitch
            rpy_msg.z = yaw
            self.rpy_publisher_.publish(rpy_msg)
            self.get_logger().info(f'Published RPY -> Roll: {roll:.2f}, Pitch: {pitch:.2f}, Yaw: {yaw:.2f}')

            # Calculate cardinal direction from yaw
            cardinal_direction = self.yaw_to_cardinal(yaw)

            # Calculate heading in degrees
            heading_degrees = (yaw + 360) % 360  # Normalize yaw to 0-360 degrees

            # Publish combined heading message
            heading_msg = String()
            heading_msg.data = f'Heading: {cardinal_direction}, {heading_degrees:.2f} degrees'
            self.heading_publisher_.publish(heading_msg)
            #self.get_logger().info(f'Published Heading -> {heading_msg.data}')

            # Publish accelerometer data
            accel_msg = String()
            accel_msg.data = f'Accel X: {accel_x:.2f}, Y: {accel_y:.2f}, Z: {accel_z:.2f}'
            self.accel_publisher_.publish(accel_msg)
           # self.get_logger().info(f'Published Accelerometer Data -> {accel_msg.data}')

            # Publish gyroscope data
            gyro_msg = String()
            gyro_msg.data = f'Gyro X: {gyro_x:.2f}, Y: {gyro_y:.2f}, Z: {gyro_z:.2f}'
            self.gyro_publisher_.publish(gyro_msg)
           # self.get_logger().info(f'Published Gyroscope Data -> {gyro_msg.data}')

            # Publish magnetometer data
            magnetometer_msg = String()
            magnetometer_msg.data = f'Mag X: {mag_x:.2f}, Y: {mag_y:.2f}, Z: {mag_z:.2f}'
            self.magnetometer_publisher_.publish(magnetometer_msg)
            #self.get_logger().info(f'Published Magnetometer Data -> {magnetometer_msg.data}')

    def quaternion_to_euler(self, x, y, z, w):
        # Convert quaternion to roll, pitch, yaw
        t0 = +2.0 * (w * x + y * z)
        t1 = +1.0 - 2.0 * (x * x + y * y)
        roll = math.atan2(t0, t1)

        t2 = +2.0 * (w * y - z * x)
        t2 = +1.0 if t2 > +1.0 else t2
        t2 = -1.0 if t2 < -1.0 else t2
        pitch = math.asin(t2)

        t3 = +2.0 * (w * z + x * y)
        t4 = +1.0 - 2.0 * (y * y + z * z)
        yaw = math.atan2(t3, t4)

        # Convert radians to degrees
        roll = math.degrees(roll)
        pitch = math.degrees(pitch)
        yaw = math.degrees(yaw)

        return roll, pitch, yaw

    def yaw_to_cardinal(self, yaw):
        # Convert yaw angle to cardinal direction
        directions = ['North', 'North-East', 'East', 'South-East', 'South', 'South-West', 'West', 'North-West']
        index = round(yaw / 45.0) % 8
        return directions[index]

def main(args=None):
    rclpy.init(args=args)
    imu_node = IMUNode()
    rclpy.spin(imu_node)

    # Clean up
    imu_node.destroy_node()
    rclpy.shutdown()

if __name__ == '__main__':
    main()
